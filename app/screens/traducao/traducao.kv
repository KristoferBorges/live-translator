<MDFillRoundFlatButtonCustom@MDFlatButton+HoverBehavior>

<Traducao>

    Image:
        source: "app/support/image/background-gpt.jpg"
        allow_stretch: True
        keep_ratio: False
        opacity: 0.060


    MDGridLayout:
        cols: 2
        row_force_default: True
        row_default_height: dp(50)
            
        AnchorLayout:
            anchor_x: "right"
            anchor_y: "top"

            MDRectangleFlatIconButton:
                text: "Live Translator"
                font_name: app.font_Troops
                theme_text_color: "Custom"
                text_color: 1, 1, 1, 1
                font_size: "25dp"
                line_color: 0, 0, 0, 0
                on_release:
                    root.desativarMicrofone()
    
    MDGridLayout:
        cols: 2
        row_default_height: dp(50)
        row_force_default: True
        padding: [0, dp(100), 0, 0]

        MDLabel:
            text: "Idioma Primário"
            id: idioma_primario
            font_name: app.font_monofonto
            font_size: "25dp"
            halign: "center"
            valign: "center"
            theme_text_color: "Custom"
            md_bg_color: 1, 4, 5, .2
            text_color: .9, .4, .4, 0.90
        
        MDLabel:
            text: "Idioma Secundário"
            id: idioma_secundario
            font_name: app.font_monofonto
            font_size: "25dp"
            halign: "center"
            valign: "center"
            theme_text_color: "Custom"
            md_bg_color: 1, 4, 5, .2
            text_color: .9, .4, .4, 0.90

    AnchorLayout:
        # botão de imagem centralizado no meio
        anchor_x: "center"
        anchor_y: "center"

        MDFlatButton:
            size_hint: None, None
            size: dp(200), dp(200)
            ripple_behavior: False
            on_release:
                root.ativarMicrofone()
                self.ripple_color = (0, 0, 0, 0)

            Image:
                source: "app/support/image/setas.png"
                size_hint: None, None
                size: dp(200), dp(200)
                allow_stretch: True
                keep_ratio: False

        MDBoxLayout:
            orientation: "vertical"
            
            MDLabel:
                text: ""
                id: mensagem
                font_name: app.font_monofonto
                font_size: "25dp"
                halign: "center"
                valign: "center"
                
    MDBoxLayout:
        orientation: "vertical"
        padding: [0, dp(250), 0, 0]

        MDLabel:
            text: "Mensagem"
            id: mensagem
            font_name: app.font_monofonto
            font_size: "25dp"
            halign: "center"
            valign: "center"
            theme_text_color: "Custom"
            text_color: .9, .4, .4, 0.70
                